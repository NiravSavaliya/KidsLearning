<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activities_horizontal_margin"
    android:paddingRight="@dimen/activities_horizontal_margin"
    android:paddingTop="@dimen/activities_vertical_margin"
    tools:context=".Activity.BodyActivity"
    android:background="@drawable/bg">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/home"
        android:id="@+id/home"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/headingbody"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/hb_heading"
        android:layout_toRightOf="@id/home"/>

    <ImageView
        android:id="@+id/below"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/home"
        android:src="@drawable/below"/>

    <ImageView
        android:id="@+id/human"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/gk_human_body_a"
        android:layout_below="@id/below"/>

</RelativeLayout>